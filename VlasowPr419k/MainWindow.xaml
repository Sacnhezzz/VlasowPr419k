        <TextBlock x:Name="textsms1" HorizontalAlignment="Left" Margin="282,126,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <TextBlock x:Name="textsms2" HorizontalAlignment="Left" Margin="282,187,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>

    </Grid>
</Window>
